<project basedir="." default="build-all" name="SKilLls" xmlns:jacoco="antlib:org.jacoco.ant">
    <property name="libs.location" value="../de.unistuttgart.iste.ps.skilled/lib"/>
    <property name="grammar.location" value="src/de/unistuttgart/iste/ps/skillls/grammar"/>
    <property name="tools.location" value="src/de/unistuttgart/iste/ps/skillls/tools"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.8"/>
    <property name="source" value="1.8"/>
   
     <condition property="isUnix">
         <os family="unix" />
     </condition>

     <condition property="scala.call" value="scala">
         <os family="unix" />
     </condition>
     
     <property name="scala.call" value="scala.bat"/>

    <path id="SKilLls.classpath">
        <fileset dir="${libs.location}" includes="*.jar"/>
        <pathelement location="out/production/SKilLls"/>
        <fileset dir="lib" includes="*.jar"/>
    </path>

    <taskdef uri="antlib:org.jacoco.ant" resource="org/jacoco/ant/antlib.xml">
        <classpath path="${libs.location}/jacocoant.jar"/>
    </taskdef>

    <target name="clean">
        <delete dir="out"/>
        <delete dir="lib"/>
        <delete dir="generated"/>
        <delete dir="bin"/>
        <delete dir="${tools.location}"/>
        <delete dir="${grammar.location}"/>
        <delete file="${libs.location}/skill.java.common.jar"/>
        <delete file="${libs.location}/skill.jvm.common.jar"/>
    </target>
    
    <target depends="clean" name="setup">
        <mkdir dir="lib"/>
        <mkdir dir="out/test/SKilLls"/>
        <copy todir="lib">
            <fileset dir="${libs.location}">
                <include name="**"/>
            </fileset>
        </copy>
    </target>

    <target name="teardown">
        <delete dir="lib"/>
        <delete dir="generated"/>
        <delete dir="bin"/>
        <delete file="${libs.location}/skill.java.common.jar"/>
        <delete file="${libs.location}/skill.jvm.common.jar"/>
    </target>

    <target depends="setup" name="gensrc-skill-antlr">
        <mkdir dir="${grammar.location}"/>
        <copy todir="${grammar.location}">
            <fileset dir="SKilLANTLR" includes="SKilLLexer.tokens"/>
        </copy>
        <java jar="${libs.location}/antlr-4.5.1-complete.jar" fork="true">
            <arg line="SKilLANTLR/SKilLLexer.g4"/>
            <arg line="-lib SKilLANTLR/SKilLLexer.tokens"/>
            <arg line="-o ${grammar.location}"/>
            <arg line="-package de.unistuttgart.iste.ps.skillls.grammar"/>
            <arg line="-encoding UTF-8"/>
        </java>
        <java jar="${libs.location}/antlr-4.5.1-complete.jar" fork="true">
            <arg line="SKilLANTLR/SKilLParser.g4"/>
            <arg line="-lib SKilLANTLR/SKilLLexer.tokens"/>
            <arg line="-o ${grammar.location}"/>
            <arg line="-package de.unistuttgart.iste.ps.skillls.grammar"/>
            <arg line="-encoding UTF-8"/>
        </java>
    </target>

    <target name="gensrc-skill-antlr-post" if="isUnix">
        <copy todir="${grammar.location}">
            <fileset dir="${grammar.location}/SKilLANTLR"/>
        </copy>
        <delete dir="${grammar.location}/SKilLANTLR" />
    </target>

    <target depends="gensrc-skill-antlr,gensrc-skill-antlr-post" name="build-skill-antlr"/>
    <target depends="build-skill-binding,build-skillls" name="build-skillls-complete"/>
    <target depends="build-skill-antlr,build-skillls-complete,test,create_run_jar,teardown" name="build-all"/>

    <target depends="setup" name="build-skill-binding">
        <mkdir dir="${tools.location}"/>
        <exec executable="${scala.call}" dir="${libs.location}">
            <arg value="skill_2.11-0.3.jar"/>
            <arg line="-p de.unistuttgart.iste.ps.skillls.tools"/>
            <arg line="-L Java ../../de.unistuttgart.iste.ps.skillls/Tools/SKilLEd.skill"/>
            <arg line="temp"/>
        </exec>
        <copy todir="${tools.location}">
            <fileset dir="${libs.location}/temp/java/src/main/java/de/unistuttgart/iste/ps/skillls/tools"/>
        </copy>
        <copy todir="${libs.location}">
            <fileset dir="${libs.location}/temp/java/lib"/>
        </copy>
        <delete dir="${libs.location}/temp"/>
    </target>

    <target depends="setup" name="build-skillls">
        <mkdir dir="out/production/SKilLls"/>
        <javac srcdir="src" fork="true" debug="true" debuglevel="${debuglevel}" destdir="out/production/SKilLls" includeantruntime="false" source="${source}" target="${target}" encoding="UTF8">
            <classpath refid="SKilLls.classpath"/>
        </javac>
    </target>

    <target depends="build-skillls-complete" name="test">
        <jacoco:coverage destfile="out/test/SKilLls/jacoco_SKilLls.exec">
        <junit fork="yes" forkmode="once" printsummary="on" haltonerror="false" haltonfailure="false">
            <classpath>
                <path refid="SKilLls.classpath"/>
            </classpath>
            <formatter type="xml"/>
            <batchtest todir="out/test/SKilLls">
                <fileset dir="src">
                    <include name="de/unistuttgart/iste/ps/skillls/test/**/*.java"/>
                </fileset>
            </batchtest>
        </junit>
       </jacoco:coverage>
    </target>

    <target depends="build-skillls-complete" name="create_run_jar">
        <jar destfile="out/SKilLls.jar" filesetmanifest="mergewithoutmain">
            <manifest>
                <attribute name="Main-Class" value="de.unistuttgart.iste.ps.skillls.main.MainClass"/>
                <attribute name="Class-Path" value="."/>
            </manifest>
            <fileset dir="out/production/SKilLls"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/antlr4-runtime-4.5.1-1.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/hamcrest-core-1.3.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/skill.java.common.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/skill.jvm.common.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/junit-4.12.jar"/>
            <zipfileset excludes="META-INF/*.SF" src="${libs.location}/hamcrest-core-1.3.jar"/>
        </jar>
        <copy todir="../de.unistuttgart.iste.ps.skilled.ui/lib">
            <fileset dir="out">
                <include name="SKilLls.jar"/>
            </fileset>
        </copy>
        <copy todir="../de.unistuttgart.iste.ps.skilled.tests/lib">
            <fileset dir="out">
                <include name="SKilLls.jar"/>
            </fileset>
        </copy>
        <copy todir="../de.unistuttgart.iste.ps.skilled/lib">
            <fileset dir="out">
                <include name="SKilLls.jar"/>
            </fileset>
        </copy>
    </target>
</project>
